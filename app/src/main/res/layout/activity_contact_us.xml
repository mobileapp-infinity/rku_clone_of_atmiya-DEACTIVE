<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".student.contact_us.ContactUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="12dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCloseContactUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_back" />

        <com.infinity.infoway.rkuniversity.custom_class.TextViewRegularFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:text="Contact Us"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Principal - Mobile No."
                        android:textColor="@color/profile_heading_color"
                        android:textSize="@dimen/student_profile_label_font_size" />

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewMediumFont
                        android:id="@+id/tvPrincipalMobileNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/profile_heading_value_color"
                        android:textSize="@dimen/student_profile_text_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Principal - Email ID."
                        android:textColor="@color/profile_heading_color"
                        android:textSize="@dimen/student_profile_label_font_size" />

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewMediumFont
                        android:id="@+id/tvPrincipalEmailId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/profile_heading_value_color"
                        android:textSize="@dimen/student_profile_text_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOD - Mobile No."
                        android:textColor="@color/profile_heading_color"
                        android:textSize="@dimen/student_profile_label_font_size" />

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewMediumFont
                        android:id="@+id/tvHOdMobileNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/profile_heading_value_color"
                        android:textSize="@dimen/student_profile_text_font_size" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOD Email ID"
                        android:textColor="@color/profile_heading_color"
                        android:textSize="@dimen/student_profile_label_font_size" />

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewMediumFont
                        android:id="@+id/tvHODEmailId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/profile_heading_value_color"
                        android:textSize="@dimen/student_profile_text_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faculty Adviser - Mobile No."
                        android:textColor="@color/profile_heading_color"
                        android:textSize="@dimen/student_profile_label_font_size" />

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewMediumFont
                        android:id="@+id/tvFacultyAdvisorMobileNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/profile_heading_value_color"
                        android:textSize="@dimen/student_profile_text_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Faculty Adviser - Email ID"
                        android:textColor="@color/profile_heading_color"
                        android:textSize="@dimen/student_profile_label_font_size" />

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewMediumFont
                        android:id="@+id/tvFavultyadviserEmailID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/profile_heading_value_color"
                        android:textSize="@dimen/student_profile_text_font_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="vertical">

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewRegularFont
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="College - Mobile No."
                        android:textColor="@color/profile_heading_color"
                        android:textSize="@dimen/student_profile_label_font_size" />

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewMediumFont
                        android:id="@+id/tvCollegeMobileNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="@color/profile_heading_value_color"
                        android:textSize="@dimen/student_profile_text_font_size" />

                </LinearLayout>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>