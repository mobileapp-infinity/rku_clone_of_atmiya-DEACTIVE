<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_req_pd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="@color/white"
    app:clickToClose="true">

    <LinearLayout
        android:id="@+id/bottom_wrapper_2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:tag="Bottom2"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_edit_req_pd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="7dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                app:srcCompat="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/iv_delete_req_pd"
                android:layout_width="30dp"
                android:layout_margin="7dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:background="@color/white"
                app:srcCompat="@drawable/remove" />

            <ImageView
                android:id="@+id/iv_upload_approval_pd_document"
                android:layout_width="30dp"
                android:layout_margin="7dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:background="@color/white"
                android:tint="@color/red"
                app:srcCompat="@drawable/ic_upload_file" />

            <ImageView
                android:id="@+id/iv_review_approval_pd_document"
                android:layout_width="30dp"
                android:layout_margin="7dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:background="@color/white"
                android:tint="@color/red"
                app:srcCompat="@drawable/ic_review_pd_approval" />

            <ImageView
                android:id="@+id/iv_print_approval_pd_document"
                android:layout_width="30dp"
                android:layout_margin="7dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                android:background="@color/white"
                android:tint="@color/red"
                app:srcCompat="@drawable/ic_print_pd_approval_doc" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_ll_req_pd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_upload_pending_file_pd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:visibility="gone">

                <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload File"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textColor="@color/red"
                    android:background="@drawable/upload_file_border"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="3">

                <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                    android:id="@+id/tvPDStatusPDApplication"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.6"
                    android:gravity="left"
                    android:text="PD Status"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size"/>

                <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                    android:id="@+id/tvPDDocumentStatusPDApplication"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="PD Document Status"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size"/>

                <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                    android:id="@+id/tvEventNamePDApplication"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="Name of Workshop"
                    android:textColor="@color/text"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

        </LinearLayout>

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>