<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PDApprovalRemarksAndReasonActivity">


    <include
        android:id="@+id/tool_main"
        layout="@layout/toolbar_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <include
        android:id="@+id/tool_main"
        layout="@layout/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="55dp"
        android:fillViewport="true"
        android:windowSoftInputMode="adjustPan">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_pd_approval_remarks_and_reason_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rvDownloadDocumentPDApprovalAct"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="@drawable/add_leave_border">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomBoldTextView
                            android:id="@+id/tvEmployeeNamePDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Employee Name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/add_leave_border"
                        android:orientation="vertical">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                            android:id="@+id/tvReasonPDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:padding="12dp"
                            android:hint="Reason"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/add_leave_border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PD Framework Credit"
                            android:paddingLeft="12dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                            android:id="@+id/tvPDFrameworkCreditPDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="PD Framework Credit"
                            android:paddingLeft="12dp"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/add_leave_border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="Nos. of on duty leaves"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                            android:id="@+id/tvNoOfOnDutyLeavesPDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Nos. of on duty leaves"
                            android:paddingLeft="12dp"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/add_leave_border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Leave From date"
                            android:paddingLeft="12dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                            android:id="@+id/tvLeaveFromDatePDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Leave From Date"
                            android:paddingLeft="12dp"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/add_leave_border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="Leave to date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                            android:id="@+id/tvLeaveToDatePDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Leave To Date"
                            android:paddingLeft="12dp"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/add_leave_border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Registration Fees"
                            android:paddingLeft="12dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                            android:id="@+id/tvRegistrationFeesPDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Registration Fees"
                            android:paddingLeft="12dp"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/add_leave_border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="Transportation"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                            android:id="@+id/tvTransportationPDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Transportation"
                            android:paddingLeft="12dp"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/add_leave_border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Accommodation"
                            android:paddingLeft="12dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                            android:id="@+id/tvAccommodationPDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Accommodation"
                            android:paddingLeft="12dp"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/add_leave_border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="Leave Expense"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                            android:id="@+id/tvLeaveExpensePDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Leave Expense"
                            android:paddingLeft="12dp"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/add_leave_border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Expense"
                            android:paddingLeft="12dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                            android:id="@+id/tvTotalExpensePDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Total Expense"
                            android:paddingLeft="12dp"
                            android:textSize="@dimen/text_size" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/add_leave_border"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:text="Sanctioned Expense"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
                            android:id="@+id/tvSanctionedExpensePDApprovalRemarksAct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="Sanctioned Expense"
                            android:paddingLeft="12dp"
                            android:textSize="@dimen/text_size" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>