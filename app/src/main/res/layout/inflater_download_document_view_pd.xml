<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/add_leave_border"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        android:gravity="center"
        android:id="@+id/llDownloadDocumentViewPD">

        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
            android:layout_alignParentLeft="true"
            android:id="@+id/tvFileNameViewPD"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="abc.pdf"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_download_pd_doc"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/ic_file_download"
            app:tint="@color/colorPrimary" />

        <ImageView
            android:id="@+id/iv_view_pd_doc"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_view_doc"
            app:tint="@color/colorPrimary" />

    </LinearLayout>

</LinearLayout>