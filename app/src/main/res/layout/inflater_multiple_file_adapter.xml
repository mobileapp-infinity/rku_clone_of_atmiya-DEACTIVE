<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/add_leave_border"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="6dp"
        android:gravity="center"
        android:id="@+id/rlUploadConducationReportCPDReq">

        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
            android:id="@+id/tvChooseFileFDPRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:background="@drawable/border_choose_multiple_file"
            android:padding="6dp"
            android:text="Choose File"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <com.infinity.infoway.rkuniversity.rku_old_app.CommonCls.CustomTextView
            android:layout_alignParentLeft="true"
            android:id="@+id/tvFileNameFDPRv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="No file chosen"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="end"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="2dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/border_choose_multiple_file">

                <ImageView
                    android:id="@+id/imgAddMoreFileFDPRv"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_add_multi_file"
                    app:tint="@color/colorPrimary" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>

                <ImageView
                    android:id="@+id/imgRemoveFileFDPRv"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    app:srcCompat="@drawable/ic_remove_multi_file"
                    app:tint="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>