<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llExpandedHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/amount_fee_details_shape"
            android:orientation="horizontal">

            <com.infinity.infoway.rkuniversity.custom_class.TextViewRegularFont
                android:id="@+id/tvExamName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_fee_details_sem"
                android:padding="8dp"
                android:text="-"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <com.infinity.infoway.rkuniversity.custom_class.TextViewRegularFont
                android:id="@+id/tvExamDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="8dp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivViewMoreBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_expand_more" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llExpandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_rectangle_shape"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightgrey"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:weightSum="4">

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewMediumFont
                        android:layout_width="0dp"
                        android:layout_weight="1.4"
                        android:layout_height="match_parent"
                        android:text="Subject"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewMediumFont
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:text="Total Marks"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewMediumFont
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:text="Obtain Marks"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                    <com.infinity.infoway.rkuniversity.custom_class.TextViewMediumFont
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="Weightage"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvStudentMidMarksSubjectList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>